#maskpcv {
  polygon-opacity:.8;
  polygon-opacity:1;
  polygon-fill:#e0e0e0;
}

#activepcvcountries  {
  line-color:#594;
  line-width:0.5;
  [zoom=2] { line-width: .5  }
  [zoom=3] { line-width: .75; }
  [zoom=4] { line-width: 1; }
  [zoom=5] { line-width: 3; }
  [zoom=6] { line-width: 4; }
  [zoom=7] { line-width: 5; }
  }


#teachers {
  marker-width:6;
  marker-fill:#f45;
  marker-line-color:#813;
  marker-allow-overlap:true;
}
